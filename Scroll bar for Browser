/// Scroll bar with managed height
 ::-webkit-scrollbar {
            width: 0.8rem;
            // display: block;
          }

          /* Track */
          ::-webkit-scrollbar-track {
            box-shadow: inset 0 0 5px currentColor;
            border-radius: 100rem;
          }

          /* Handle */
          ::-webkit-scrollbar-thumb {
            // background-color:$md-primary;
            background: currentColor;
            border-radius: 190px;
            border-right: none;
            border-left: none;
          }

          // /* Handle on hover */
          ::-webkit-scrollbar-thumb:hover {
            // background-color:$md-primary;
            background: currentColor;
          }
